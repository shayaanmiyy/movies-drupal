<article class="node node--teaser node--movie">

  <!-- Title Section -->
  <div class="movie-title">
    <h3>
        <a href="{{ url }}" class="movie-title-link">{{ label }}</a>
    </h3>
  </div>
  {# Add field in content types multivalued Fields  #}
  <!-- Links Section -->
  <div class="movie-links d-flex justify-content-between">
    {% for link in content.field_reference_links %}
    {% if link['#url'] is not empty and link['#title'] is not empty %}
      <a href="{{ link['#url'] }}" class="movie-section__link btn btn-link">{{ link['#title'] }}</a>
    {% endif %}
  {% endfor %}
  </div>

  <!-- Image and Body Section -->
  <div class="movie-content d-flex mt-4 mb-4">
    <div class="movie-image">
      {{ content.field_movie_poster }}
    </div>
    <div class="movie-body ms-4">
      {{ content.body }}
    </div>
  </div>

</article>